<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/data_singolo_voto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/progress_voto"
                android:text="Large Text"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tipo_singolo_voto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/data_singolo_voto"
                android:text="Large Text"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/notr_singolo_voto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tipo_singolo_voto"
                android:text="New Text"
                android:textSize="20dp" />
        </LinearLayout>

        <it.itistulliobuzzi.mybuzzi.itsbuzzi.Utility.CircularProgressBar
            android:id="@+id/progress_single_voto"
            style="@style/Widget.ProgressBar.Holo.CircularProgressBar"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:gravity="right" />

    </RelativeLayout>

</RelativeLayout>